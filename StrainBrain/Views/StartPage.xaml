<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StrainBrain.Views.StartPage"
             Title="StartPage"
             Shell.NavBarIsVisible="False">
    <StackLayout
        Background="{x:StaticResource Green45}">
        <Label
            FontSize="Title"
            Text="Чтобы не было скучно"
            LineBreakMode="WordWrap"
            TextColor="White"
            HorizontalOptions="CenterAndExpand"
            Margin="0, 200, 0, 0"/>

        <Label
            Margin="0"
            FontSize="Title"
            Text="отвечайте на вопросы"
            LineBreakMode="WordWrap"
            TextColor="White"
            HorizontalOptions="Center"
            />

        <Label
            FontSize="Title"
            Text="Уз"
            LineBreakMode="WordWrap"
            TextColor="White"
            HorizontalOptions="CenterAndExpand"
            />

        <Button
            Text="Попробовать"
            Command="{Binding TryItCommand}"
            Margin="25"/>
    </StackLayout>
</ContentPage>