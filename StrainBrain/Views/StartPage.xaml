<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StrainBrain.Views.StartPage"
             Title="StartPage"
             Shell.NavBarIsVisible="False">
    <StackLayout
        Background="{x:StaticResource White}">

        <StackLayout
            Orientation="Vertical"
            VerticalOptions="CenterAndExpand">
            <Frame
                VerticalOptions="Center"
                HorizontalOptions="Center"
                BorderColor="Transparent"
                BackgroundColor="{x:StaticResource Green45}"
                HeightRequest="200"
                Margin="30">
                <StackLayout
                    VerticalOptions="CenterAndExpand">
                    <Label
                        FontSize="Title"
                        TextColor="White"
                        Text="Отвечайте на вопросы и тренируйте свой мозг"
                        />
                </StackLayout>
            </Frame>

            <Button
                Text="Попробовать"
                Command="{Binding TryItCommand}"
                Margin="25"
                VerticalOptions="Center"
                />
        </StackLayout>
    </StackLayout>
</ContentPage>